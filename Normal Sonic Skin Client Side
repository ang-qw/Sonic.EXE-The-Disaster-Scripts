-- Script sin GUI para transformar Sonic.exe en Sonic normal

local args = {
	[1] = "sonicexe"
}

game:GetService("ReplicatedStorage").remotes.morphs:FireServer(unpack(args))
wait(0.25)

local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()

if character:FindFirstChild("head") then
	local head = character.head

	if head:FindFirstChild("eyes") and head.eyes:FindFirstChild("exe") then
		head.eyes.exe:Destroy()
	end

	if head.eyes:FindFirstChild("regular") then
		for _, part in ipairs(head.eyes.regular:GetDescendants()) do
			if part:IsA("BasePart") then
				part.Transparency = 0
			end
		end
	end

	if head:FindFirstChild("face") and head.face:FindFirstChild("smile") then
		head.face.smile:Destroy()
	end

	if head.face:FindFirstChild("eyeblood") then
		head.face.eyeblood:Destroy()
	end

	if head.face:FindFirstChild("face") and head.face.face:FindFirstChild("blood") then
		head.face.face.blood:Destroy()
	end

	if head:FindFirstChild("Blood") then
		head.Blood:Destroy()
	end
end

if character:FindFirstChild("torso") then
	local torso = character.torso

	if torso:FindFirstChild("torsoSkin") and torso.torsoSkin:FindFirstChild("blood") then
		torso.torsoSkin.blood:Destroy()
	end

	if torso:FindFirstChild("blood") then
		torso.blood:Destroy()
	end
end

local head = character:FindFirstChild("head")
if head then
	local eyes = head:FindFirstChild("eyes"):FindFirstChild("eyes")
	if eyes then
		eyes.Color = Color3.fromRGB(255, 255, 255)
		eyes.Material = Enum.Material.Plastic
	end
end

local mouth = character:WaitForChild("head"):WaitForChild("face"):WaitForChild("mouth")
mouth.Transparency = 0
